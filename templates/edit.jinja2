{% extends 'base.jinja2' %}

{% block styles %}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    h1 {
        color: #333;
    }

    form {
        margin-top: 20px;
    }

    textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
    }

    input[type="submit"] {
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    input[type="submit"]:hover {
        background-color: #0056b3;
    }

    a.delete-link {
        color: #ff6347;
        text-decoration: none;
    }

    a.delete-link:hover {
        text-decoration: underline;
    }
</style>
{% endblock %}

{% block content %}
<h1>Post name: {{ post[1] }}</h1>
<form action="/post/edit/{{ post[0] }}" method="POST">
    <textarea name="texto" rows="4" cols="50">{{ post[2] }}</textarea>
    <br>
    <h3>Post Name</h3>
    <textarea name="title" row="1" cols="50">{{ post[1] }}</textarea>
    <input type="submit" value="Save">
</form>
<a href="{{ url_for('delet_post', post_id=post[0]) }}" class="delete-link" onclick="return confirm('Are you sure you want to delete this post?')">Delete post!!!</a>
{% endblock %}
